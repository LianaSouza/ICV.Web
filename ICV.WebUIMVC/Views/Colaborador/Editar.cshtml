@model ICV.WebUIMVC.Models.ColaboradorModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Editar Colaborador</h2>
                    <hr />

                </section>
                <section class="row justify-content-center mt-3">
                    <div class="table-responsive rounded">

                        <table class="table table-bordered text-center">

                            <thead class="table-dark">

                                <tr>
                                    <th scope="col">Nome do Colaborador</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Telefone</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Documento</th>
                                </tr>

                            </thead>

                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Telefone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.TipoColaborador)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.DocumentoColaborador)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <form asp-action="Editar">
                        <div class="row justify-content-center">
                            <div class="col-sm-4 mt-2">
                                <label>Nome do Colaborador</label>
                                <input asp-for="Nome" id="nome" class="form-control" placeholder="" required />
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" placeholder="" required />
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label>CPF</label>
                                <input asp-for="DocumentoColaborador" id="cpf" class="form-control" placeholder="" required />
                            </div>
                        </div>
                        <div class="row justify-content-center mt-2">

                            <div class="col-sm-4 mt-2">
                                <label>Tipo do Colaborador</label>
                                <select asp-for="TipoColaborador" class="form-select" required>
                                    <option value="0" selected>Voluntario</option>
                                    <option value="1">Funcionario</option>
                                </select>
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label>Telefone</label>
                                <input asp-for="Telefone" id="celular" class="form-control" placeholder="" required />
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label>Status</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-4 mt-2">

                            </div>

                            <div class="col-sm-8 text-end" style="margin-top: 37.5px">
                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input asp-action="Editar" type="submit" value="Salvar" class="btn btn-success" />
                            </div>
                        </div>
                    </form>

                </section>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    /* Mascaras */


    /*Mascara para o Nome*/

    $("#nome").on("input", function () {
        var regexp = /[^a-zA-Z]/g;
        if (this.value.match(regexp)) {
            $(this).val(this.value.replace(regexp, ''));
        }
    });

    /*Mascara para o CPF*/
    $("cpf, #cpf").mask("000.000.000-00");


    /*Mascara para celular*/
    $("#telefone, #celular").mask("(00) 00000-0000");


</script>