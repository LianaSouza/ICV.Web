@model ICV.WebUIMVC.Models.ColaboradorModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style=" margin-top:70px;">
    <div class="card mb-2 shadow">
        <div class="card-title p-3">
            <h4>Cadastrar Colaborador</h4>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row mt-2">
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nomecolaborador" placeholder="Nome e sobrenome">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailcolaborador" placeholder="email@email.com">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Telefone</label>
                        <input type="text" class="form-control" id="telefonecolaborador" placeholder="(DDD)xxxxx-xxxx">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpfcolaborador" placeholder="000.000.000-00">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Data de Cadastro</label>
                        <input type="date" class="form-control" id="datacadastrocolaborador">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Data de nascimento</label>
                        <input type="date" class="form-control" id="datanascimentolaborador">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="senhacolaborador">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">RG</label>
                        <input type="text" class="form-control" id="numerodocumentocolaborador">
                    </div>
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Tipo colaborador</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Selecione a opção</option>
                            <option value="1">Funcionário</option>
                            <option value="2">Colaborador</option>

                        </select>
                    </div>
                </div>
                <div class="row mt-2 mb-3">
                    <div class="col-sm-4">
                        <label for="formGroupExampleInput" class="form-label">Status</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Selecione o status</option>
                            <option value="1">Ativo</option>
                            <option value="2">Inativo</option>
                        </select>
                    </div>
                    <div class="col-sm-8 text-right">
                        <div style="margin-top: 25px">
                            <a href="" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retornar</a>
                            <a href="" class="btn btn-success">Salvar <i class="fas fa-save"></i></a>
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>

