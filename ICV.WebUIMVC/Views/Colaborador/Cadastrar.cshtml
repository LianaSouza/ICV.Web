@model ICV.WebUIMVC.Models.ColaboradorModel

<!DOCTYPE html>
<html>



<head>
    <meta charset="uf-8">



    <meta name="viewport" content="width=device-width, initial-scale=1">



    <meta name="description" content="">



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">



</script>





    <style>
       
    </style>



</head>



<body>
    <div style=" margin-top:140px;">
        <div class="card mb-2 shadow">
            <div class="card-title p-3">
                <h4>Cadastrar Colaborador</h4>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nomecolaborador" placeholder="Nome do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Email</label>
                            <input type="text" class="form-control" id="emailcolaborador" placeholder="Email do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Telefone</label>
                            <input type="text" class="form-control" id="telefonecolaborador" placeholder="Telefone do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">CPF</label>
                            <input type="text" class="form-control" id="cpfcolaborador" placeholder="000.000.000-00">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Data de Cadastro</label>
                            <input type="text" class="form-control" id="datacadastrocolaborador" placeholder="Data de cadastro do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Data de nascimento</label>
                            <input type="text" class="form-control" id="datanascimentolaborador" placeholder="Data de nascimento do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Senha</label>
                            <input type="text" class="form-control" id="senhacolaborador" placeholder="Senha do colaborador">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Documento</label>
                            <input type="text" class="form-control" id="senhacolaborador" placeholder= "numero do documento">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Tipo colaborador</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione a opção</option>
                                <option value="1">Funcionário</option>
                                <option value="2">Colaborador</option>

                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Status</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione o status</option>
                                <option value="1">Ativo</option>
                                <option value="2">Inativo</option>



                            </select>



                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-8">

                            








                        </div>
                        <div class="col-sm-4 text-right">



                            <div style="margin-top: 45px">
                                <a href="" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <a href="" class="btn btn-success">Salvar <i class="fas fa-save"></i></a>
                            </div>



                        </div>



                    </div>



                </div>



            </div>



        </div>



    </div>



</body>



</html>
