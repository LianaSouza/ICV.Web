@model ICV.WebUIMVC.Models.ColaboradorModel

@{
    ViewData["Title"] = "Cadastrar Curso";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}


<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Colaborador</h2>
                    <hr />
                </section>
                <section class="row justify-content-center">
                    <form asp-action="Cadastrar">
                        <div class="row">
                            <div class="col-sm-6 mt-3">
                                <label>Nome</label>
                                <input asp-for="Nome" class="form-control" placeholder="Insira o nome" required />
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>Email</label>
                                <label style="color:red ; font-size:small">*Não utilizar e-mails cadastrados anteriormente</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@gmail.com" required />
                            </div>

                            <div class="col-sm-2 mt-3">
                                <label>Data de Nascimento</label>
                                <input asp-for="DataNascimentoColaborador" class="form-control" type="date" required />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 mt-3">
                                <label>Telefone</label>
                                <input asp-for="Telefone"  type="tel" id="celular"  class="form-control" placeholder="(11)95140-7863" required />
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>Tipo do Colaborador</label>
                                <select asp-for="TipoColaborador" class="form-select" aria-label="Default select example">
                                    <option value="0" selected>Voluntario</option>
                                    <option value="1">Funcionario</option>
                                </select>
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>Status</label>
                                <select asp-for="Status" class="form-select" aria-label="Default select example">
                                    <option value="0">Ativo</option>
                                    <option value="1">Inativo</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 mt-3">
                                <label>CPF</label>
                                <input asp-for="DocumentoColaborador" class="form-control" placeholder="CPF" type="number" required />
                            </div>
                            <div class="col-sm-4 mt-3">
                                <label>Senha</label>
                                <input asp-for="SenhaColaborador" type="password" class="form-control" placeholder="Insira uma senha" required />
                            </div>
                            <div class="col-sm-4 text-end" style="margin-top:40px;">
                                <a asp-action="Index" class="btn btn-secondary" /><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-success">
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

<script>

    $("#telefone, #celular").mask("(00) 00000-0000");

</script>