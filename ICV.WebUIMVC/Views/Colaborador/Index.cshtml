@model IEnumerable<ICV.WebUIMVC.Models.ColaboradorModel>

<p>
    <a asp-action="Cadastrar">Cadastrar</a>
</p>
<div class="container-fluid mt-3">
    <h2 class="text-center">Lista Colaboradores</h2>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Data Nascimento</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Status</th>
                    <th scope="col">Tipo Colaborador</th>
                    <th scope="col">Data Cadastro</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentoColaborador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataNascimentoColaborador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoColaborador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCadastro)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", new { /* id=item.PrimaryKey */ })
                            @Html.ActionLink("Detalhes", "Detailhes", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>