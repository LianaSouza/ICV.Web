@model ICV.WebUIMVC.Models.AlunoModel

@{
    ViewData["Title"] = "Cadastrar Aluno";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Aluno</h2>
                    <hr />
                </section>
                <section class="row justify-content-center mt-3">
                    <form asp-action="Cadastrar">
                        <div class="row">
                            <div class="col-sm-6 mt-3">
                                <label>Nome</label>
                                <input asp-for="Nome" class="form-control" placeholder="Insira o nome do aluno..." required />
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>CPF</label>
                                <input asp-for="CpfAluno" class="form-control" placeholder="xxx.xxx.xxx-xx" type="number" required />
                            </div>

                            <div class="col-sm-2 mt-3">
                                <label>Data Nascimento</label>
                                <input asp-for="DataNascimentoAluno"  class="form-control" placeholder="xx/xx/xxxx" type="date" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 mt-3">
                                <label>Email</label>
                                <label style="color:red ; font-size:small">*Não utilizar e-mails cadastrados anteriormente</label>
                                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" type="email" required />
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>Telefone</label>
                                <input asp-for="Telefone" class="form-control" placeholder="(xx)xxxxx-xxxx" type="tel" required />
                            </div>

                            <div class="col-sm-4 mt-3">
                                <label>Status</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 mt-3">
                                <label>Turma</label>
                                <select asp-for="FKIdTurma"
                                        asp-items="@(new SelectList(Model.Turmas, nameof(AlunoModel.FKIdTurma), nameof(AlunoModel.NomeTurma)))" class="form-select" required>
                                </select>
                            </div>

                            <div class="col-sm-8 mt-3 text-end">
                                <a asp-action="Index" class="btn btn-secondary mt-4" /><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-success mt-4" />
                            </div>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}