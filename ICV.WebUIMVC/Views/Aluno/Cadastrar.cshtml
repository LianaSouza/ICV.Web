@model ICV.WebUIMVC.Models.AlunoModel



<!DOCTYPE html>
<html>



<head>
    <meta charset="uf-8">



    <meta name="viewport" content="width=device-width, initial-scale=1">



    <meta name="description" content="">



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">



    </script>





    <style>
        #rectangle {
            position: relative;
            width: 1px;
            height: 571px;
            background: #04A0D2;
            border-radius: 2px;
        }
    </style>



</head>



<body>
    <div style=" margin-top:140px;">
        <div class="card mb-2 shadow">
            <div class="card-title p-3">
                <h4>Editar Alunos</h4>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nomealuno" placeholder="Nome do aluno">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Email</label>
                            <input type="text" class="form-control" id="emailaluno" placeholder="Email do aluno ou responsavel">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Telefone</label>
                            <input type="text" class="form-control" id="telefonealuno" placeholder="Telefone do aluno ou responsável">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">CPF</label>
                            <input type="text" class="form-control" id="cpfaluno" placeholder="000.000.000-00">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Data de Cadastro</label>
                            <input type="text" class="form-control" id="datacadastro" placeholder="Data de cadastro aluno">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Nome da Turma</label>
                            <input type="text" class="form-control" id="turmaaluno" placeholder="Turma do aluno">
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Período Turma</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione o perído</option>
                                <option value="1">Manhã</option>
                                <option value="2">Tarde</option>
                                <option value="3">Noite</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Status</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione o status</option>
                                <option value="1">Ativo</option>
                                <option value="2">Inativo</option>



                            </select>



                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-8">
                            







                        </div>
                        <div class="col-sm-4 text-right">



                            <div style="margin-top: 45px">
                                <a href="" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <a href="" class="btn btn-success">Salvar <i class="fas fa-save"></i></a>
                            </div>



                        </div>



                    </div>



                </div>



            </div>



        </div>



    </div>



</body>



</html>

