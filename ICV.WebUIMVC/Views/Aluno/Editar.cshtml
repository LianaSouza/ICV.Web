@model ICV.WebUIMVC.Models.AlunoModel

@{
    ViewData["Title"] = "Editar Aluno";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>

                    <h2>Editar Aluno</h2>
                    <hr />

                </section>
                <section class="row justify-content-center mt-3">
                    <div class="table-responsive rounded">

                        <table class="table table-bordered text-center">

                            <thead class="table-dark">

                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">CpfAluno</th>
                                    <th scope="col">DataNascimento</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Telefone</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Turma</th>
                                    <th scope="col">Criado por</th>
                                </tr>

                            </thead>

                            <tbody>

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Nome)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.CpfAluno)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.DataNascimentoAluno)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Telefone)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Status)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.NomeTurma)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Colaborador)
                                    </td>
                                </tr>

                            </tbody>

                        </table>

                    </div>

                    <article class="col-sm-12">
                        <form asp-action="Editar">

                            <div class="row justify-content-center">

                                <div class="col-2 mt-2">
                                    <label>Nome</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Insira o nome do aluno..." required />
                                </div>

                                <div class="col-2 mt-2">
                                    <label>CPF</label>
                                    <input asp-for="CpfAluno" class="form-control" placeholder="xxx.xxx.xxx-xx" required />
                                </div>

                                <div class="col-2 mt-2">
                                    <label>Data de nascimento</label>
                                    <input asp-for="DataNascimentoAluno" class="form-control" placeholder="xx/xx/xxxx" required />
                                </div>

                                <div class="col-2 mt-2">
                                    <label>Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                                </div>

                                <div class="col-2 mt-2">
                                    <label>Telefone</label>
                                    <input asp-for="Telefone" class="form-control" placeholder="(xx)xxxxx-xxxx" required />
                                </div>

                                <div class="col-2 mt-2">
                                    <label>Status</label>
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="1" selected>Ativo</option>
                                        <option value="0">Inativo</option>
                                    </select>
                                </div>

                                <div class="col-12 mt-2 text-end">
                                    <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                    <input type="submit" value="Salvar" class="btn btn-success" />
                                </div>
                            </div>
                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>

</section>

