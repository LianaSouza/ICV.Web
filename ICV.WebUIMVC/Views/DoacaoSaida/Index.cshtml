@model IEnumerable<ICV.WebUIMVC.Models.DoacaoSaidaModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</head>

<body>
    <div style=" margin-top:140px;">
        <div class="card mb-2 shadow">
            <div class="card-title p-3">
                <div class="container-fluid">
                    <h4>Cadastrar Doações</h4>
                    <hr>

                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FKIdBeneficiado)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FKIdSaidaDoacao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdDoacao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.QuantidadeItem)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CategoriaDoacao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DataCadastroDoacao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FKIdColaborador)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FKIdBeneficiado)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FKIdSaidaDoacao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdDoacao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.QuantidadeItem)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CategoriaDoacao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DataCadastroDoacao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FKIdColaborador)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Editar", "Editar", new { id = item.IdDoacao }) |
                                                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdDoacao }) |
                                                    @Html.ActionLink("Excluir", "Excluir", new { id = item.IdDoacao })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <div>
                                    <p>
                                        <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar Nova Doação</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>