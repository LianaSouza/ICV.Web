@model ICV.WebUIMVC.Models.DoacaoSaidaModel

@{
    ViewData["Title"] = "Cadastrar Saida de Doações";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}



    <section>

        <div class="p-3">
            <div class="card shadow p-4">
                <div class="card-body">

                    <section>
                        <h2>Cadastrar saida de doações</h2>
                        <hr />
                    </section>

                    <section class="row justify-content-center mt-3">
                        <form asp-action="Cadastrar">
                            <div class="row justify-content-center">

                                <div class="col-sm-6 mt-2">
                                    <label>Categoria</label>
                                    <select asp-for="CategoriaDoacao" class="form-select" aria-label="Default select example">
                                        <option value="1" selected>Alimento</option>
                                        <option value="2">Roupa</option>
                                        <option value="3">Brinquedo</option>
                                    </select>

                                </div>
                                <div class="col-6 mt-2">
                                </div>

                            </div>
                            <div class="mt-3 text-end">
                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-success" />
                            </div>

                        </form>
                    </section>
                </div>
            </div>
        </div>

    </section>


















