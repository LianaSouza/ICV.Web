@model ICV.WebUIMVC.Models.DoacaoSaidaModel



    <section>
        <div class="p-3">
            <div class="card shadow p-4">
                <div class="card-body">
                    <section>
                        <h2>Editar Saida de doações</h2>
                        <hr />
                        <section class="row justify-content-center mt-3">
                            <div class="table-responsive rounded">

                                <table class="table table-bordered text-center">
                                    <thead class="table-dark">

                                        <tr>
                                            <th scope="col">Categoria</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => modelItem.CategoriaDoacao)
                                            </td>


                                        </tr>
                                    </tbody>

                                </table>


                            </div>
                          
                            <form asp-action="Editar">
                                <div class="row justify-content-center">

                                    <div class="col-6 mt-2">
                                        <label>Categoria</label>
                                        <select asp-for="CategoriaDoacao" class="form-select" aria-label="Default select example">
                                            <option value="1" selected>Alimento</option>
                                            <option value="2">Roupa</option>
                                            <option value="3">Brinquedo</option>
                                        </select>
                                    </div>
                                    <div class="col-6 mt-2">
                                    </div>

                                </div>

                                    <div class="mt-3 text-end">
                                        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                        <input asp-action="Editar" type="submit" value="Salvar" class="btn btn-success" />
                                    </div>
</form>
                            
                        </section>
                    </section>
                </div>
            </div>
        </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



