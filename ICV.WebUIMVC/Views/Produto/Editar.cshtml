@model ICV.WebUIMVC.Models.ProdutoModel
@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}




<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Editar Produto</h2>
                    <hr />

                </section>
                <section class="row justify-content-center mt-3">
                    <div class="table-responsive rounded">
                        <table class="table table-bordered text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Categoria</th>
                                    <th scope="col">Quantidade</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.NomeProduto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.CategoriaProduto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.QuantidadeProduto)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <form asp-action="Editar">
                        <div class="row justify-content-center">
                            <div class="col-sm-4 mt-2">
                                <label>Nome do Produto</label>
                                <input asp-for="NomeProduto" class="form-control" />
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label class="control-label">Categoria</label>
                                <select asp-for="CategoriaProduto" class="form-select">
                                    <option value="1" selected>Alimento</option>
                                    <option value="2">Roupa</option>
                                    <option value="3">Brinquedo</option>
                                </select>
                            </div>

                            <div class="col-sm-4 mt-2">
                                <label asp-for="QuantidadeProduto" class="control-label"></label>
                                <input asp-for="QuantidadeProduto" class="form-control" />
                            </div>
                        </div>
                     
                        <div class="row justify-content-center">
                            <div class="col-sm-8 text-end" style="margin-top: 37.5px">
                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input asp-action="Editar" type="submit" value="Salvar" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>