@model ICV.WebUIMVC.Models.DoadorModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

    <section class="row justify-content-center">

        <div class="col-sm-8 text-center mt-5">

            <h1 class="h3">Coruja Veículos - Cadastrar Novo Doador</h1>

            <p>Para voltar para lista de Doadores <a asp-action="Index">Clique aqui</a>.</p>

        </div>

        <article class="col-sm-8">

            <form asp-action="Cadastrar">

                <div class="row justify-content-center">

                    <div class="col-2 mt-2">
                        <input asp-for="Nome" class="form-control" placeholder="Insira o nome do doador..." required />
                    </div>

                    <div class="col-2 mt-2">
                        <input asp-for="DocumentoDoador" class="form-control" placeholder="Insira seu cpf" required />
                    </div>
                    <div class="col-2 mt-2">
                        <input asp-for="Telefone" class="form-control" placeholder="Insira seu telefone" required />
                    </div>

                    <div class="col-2 mt-2">
                        <input asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                    </div>

                    <div class="col-2 mt-2">
                        <label>Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="1" selected>Ativo</option>
                            <option value="0">Inativo</option>
                        </select>

                    </div>

                    <div class="col-2 mt-2">
                        <label>Doador anônimo</label>
                        <select asp-for="AnonimoDoador" class="form-select">
                            <option value="1" selected>Verdadeiro</option>
                            <option value="2">Falso</option>
                        </select>

                    </div>

                    <div class="col-2 mt-2">
                        <input asp-for="ObservacaoDoador" class="form-control" placeholder="xxxxxxxxxxx" required />
                    </div>

                    <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-primary btn-sm btn-block w-100 mt-2" />

                </div>

            </form>

        </article>

    </section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
