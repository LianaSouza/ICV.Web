@model IEnumerable<ICV.WebUIMVC.Models.DoadorModel>

@{
    ViewData["Title"] = "Doadores";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}


<section class="p-3">

    <div class="card shadow p-4">

        <div class="card-body">
            <section>
                <h2>Gerenciamento de Doadores</h2>
                <hr />
                <a class="btn btn-secondary" asp-controller="HomePortal" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                <a class="btn btn-primary" asp-action="Cadastrar"><i class="fas fa-plus"></i> Novo</a>
            </section>

            <section class="row justify-content-center mt-3">
                <div class="table-responsive rounded">
                    <div class="table-responsive rounded">
                        <table class="table text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Nome do Doador</th>
                                    <th scope="col">Documento</th>
                                    <th scope="col">Telefone</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Anônimo</th>
                                    <th scope="col">Observação</th>
                                    <th scope="col">Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DocumentoDoador)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefone)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.AnonimoDoador)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ObservacaoDoador)
                                        </td>

                                        <td>
                                            <a class="text-primary" asp-action="Editar" asp-route-id="@item.id"><i class="fas fa-edit"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>








