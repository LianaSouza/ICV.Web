@model ICV.WebUIMVC.Models.TurmaModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section class="row justify-content-center">

    <div class="col-sm-8 text-center mt-5">

        <h1 class="h3">Coruja Veículos - Cadastrar Turma</h1>

        <p>Para voltar para lista de Turma <a asp-action="Index">Clique aqui</a>.</p>

    </div>


    <article class="col-sm-8">

        <form asp-action="Cadastrar">

            <div class="row justify-content-center">

                <div class="col-8 mt-2">
                    <input asp-for="NomeTurma" class="form-control" placeholder="Insira o nome da Turma..." required />
                </div>

                <div class="col-4 mt-2">
                    
                    <select asp-for="PeriodoTurma" class="form-select" required>
                        <option value="1" selected>Manhã</option>
                        <option value="2">Tarde</option>
                        <option value="3">Noite</option>
                    </select>

                </div>

                <div class="col-4 mt-2">
                    <select asp-for="StatusTurma" class="form-select" required>
                        <option value="1" selected>Ativo</option>
                        <option value="0">Inativo</option>
                    </select>
                </div>

                <div class="col-12 mt-2">
                    <textarea asp-for="DescricaoTurma" id="floatingTextarea2" class="form-control" rows="4" placeholder="Preencha a descrição do curso" required></textarea>
                </div>

                <div class="col-4 mt-2">
                    <select asp-for="IdCurso"
                            asp-items="@(new SelectList(Model.Cursos, nameof(CursoModel.IdCurso), nameof(CursoModel.NomeCurso)))">
                        <option>Escolha o curso</option>
                    </select>
                </div> 


                <div class="form-group">
                    <label  class="control-label"></label>
                    <input asp-for="FKIdColaborador" class="form-control" />
                    <span asp-validation-for="FKIdColaborador" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label  class="control-label"></label>
                    <input asp-for="FKIdCurso" class="form-control" />
                    <span asp-validation-for="FKIdCurso" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </form>

    </article>

</section>