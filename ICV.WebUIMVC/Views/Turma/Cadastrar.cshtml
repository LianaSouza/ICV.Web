<section class="row justify-content-center" >
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Turma</h2>
                    <hr />
                </section>
                <section class="row justify-content-center mt-3">
                    <form asp-action="Cadastrar">

                        <div class="row justify-content-center">

                            <div class="col-8 mt-3">
                                <label>Nome da Turma</label>
                                <input asp-for="NomeTurma" class="form-control" placeholder="Insira o nome da Turma..." required />
                            </div>

                            <div class="col-4 mt-3">
                                <label>Período</label>
                                <select asp-for="PeriodoTurma" class="form-select" required>
                                    <option value="1" selected>Manhã</option>
                                    <option value="2">Tarde</option>
                                    <option value="3">Noite</option>
                                </select>

                            </div>
                            <div class="col-6 mt-3">
                                <label>Status</label>
                                <select asp-for="StatusTurma" class="form-select" required>
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>

                            </div>
                            <div class="col-6 mt-3">
                                <label>Curso</label>
                                <select asp-for="FKIdCurso"
                                        asp-items="@(new SelectList(Model.Cursos, nameof(CursoModel.IdCurso), nameof(CursoModel.NomeCurso)))" class="form-select" required>
                                </select>

                            </div>
                            <div class="col-12 mt-3">
                                <label>Descrição</label>
                                <textarea asp-for="DescricaoTurma" id="floatingTextarea2" class="form-control" rows="4" placeholder="Preencha a descrição da Turma" required></textarea>

                            </div>

                            <div class="form-group mt-3 text-end">

                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input type="submit" value="Cadastrar" class="btn btn-success" data-myValue="@ViewBag.retorno" />

                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

<script>

    var retorno = "@ViewBag.retorno";
    console.log("Esse"+retorno);



    $(document).ready(function () {

            if (retorno == "Erro" ) {
                const Toast = Swal.mixin({

                    toast: true,

                    position: 'top',

                    showConfirmButton: false,

                    timer: 2000,

                    didOpen: (toast) => {

                        toast.addEventListener('mouseenter', Swal.stopTimer)

                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }

                })

                Toast.fire({

                    title: 'Erro ao enviar os dados, revise as informações enviadas.',

                    icon: 'warning',

                    iconColor: 'red',

                })
            }
             if (retorno == "Sucesso" ) {
                const Toast = Swal.mixin({

                    toast: true,

                    position: 'top',

                    showConfirmButton: false,

                    timer: 2000,

                    didOpen: (toast) => {

                        toast.addEventListener('mouseenter', Swal.stopTimer)

                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }

                })

                Toast.fire({

                    title: 'Dados enviados com Sucesso!',

                    icon: 'success',

                    iconColor: 'green',

                })
             }
    });
</script>
