@model ICV.WebUIMVC.Models.TurmaModel

@{
    ViewData["Title"] = "BuscarTurma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes da Turma</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">

    </script>

</head>

<body>

    <div style=" margin-top:140px;">

        <div class="card mb-2 shadow">

            <div class="card-title p-3">
                <h4>Detalhes</h4>
                <hr />
            </div>

            <div class="card-body">

                <div class="container">

                    <div class="row">


                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IdTurma)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IdTurma)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.NomeTurma)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.NomeTurma)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DescricaoTurma)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DescricaoTurma)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PeriodoTurma)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PeriodoTurma)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.StatusTurma)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.StatusTurma)
                            </dd>

                        </dl>

                    </div>

                    <div>

                        <a href="http://localhost:58404/Turma/BuscarTurma" class="btn btn-primary" role="button" data-bs-toggle="button">Editar</a> |
                        <a href="http://localhost:58404/Turma" class="btn btn-primary" role="button" data-bs-toggle="button">Voltar Index</a>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>

</html>