@model ICV.WebUIMVC.Models.CursoModel

@{
    ViewData["Title"] = "Remover";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Turma</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">

    </script>



</head>

<body>

    <h1>Remover</h1>

    <h3>Tem certeza que deseja deletar isto ?</h3>

    <div style=" margin-top:140px;">

        <div class="card mb-2 shadow">

            <div class="card-title p-3">
                <h4>Remover Curso</h4>
            </div>

            <div class="card-body">

                <div class="container">

                    <div class="row">

                        <dl class="row">

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.NomeCurso)
                            </dt>

                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.NomeCurso)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DescricaoCurso)
                            </dt>

                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DescricaoCurso)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.StatusCurso)
                            </dt>

                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.StatusCurso)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DataCadastroCurso)
                            </dt>

                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DataCadastroCurso)
                            </dd>

                        </dl>

                        <form asp-action="Remover">

                            <input type="submit" value="Remover" class="btn btn-danger" /> |
                            <a asp-action="Index">
                                De volta à lista
                            </a>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>

</html>