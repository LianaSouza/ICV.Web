@model ICV.WebUIMVC.Models.CursoModel

@{
    ViewData["Title"] = "Editar Curso";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Editar Curso</h2>
                    <hr />

                </section>
                <section class="row justify-content-center mt-3">
                    <div class="table-responsive rounded">

                        <table class="table table-bordered text-center">

                            <thead class="table-dark">

                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Status</th>
                                </tr>

                            </thead>

                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.NomeCurso)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.DescricaoCurso)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.StatusCurso)
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>
                    <form asp-action="Editar">
                        <div class="row justify-content-center">
                            <div class="col-8 mt-2">
                                <label>Nome do Curso</label>
                                <input asp-for="NomeCurso" class="form-control" placeholder="Insira o nome do curso..." required />
                            </div>

                            <div class="col-4 mt-2">
                                <label>Status</label>
                                <select asp-for="StatusCurso" class="form-select" required>
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>

                            <div class="col-12 mt-4">
                                <label>Descrição</label>
                                <textarea asp-for="DescricaoCurso" id="floatingTextarea2" class="form-control" rows="4" placeholder="Preencha a descrição do curso" required></textarea>
                            </div>

                        </div>
                        <div class="mt-3 text-end">
                            <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                            <input asp-action="Editar" type="submit" value="Salvar" class="btn btn-success " />

                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
