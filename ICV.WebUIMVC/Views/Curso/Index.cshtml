@model IEnumerable<ICV.WebUIMVC.Models.CursoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<section class="row justify-content-center">

    <div class="col-sm-8 text-center mt-5">

        <h1 class="h3">Coruja Veículos - Lista de Curso</h1>

        <p>Para voltar para criar um novo cursos <a asp-action="Cadastrar">Clique aqui</a>.</p>

    </div>

</section>

<section class="row justify-content-center">

    <div class="col-sm-8">

        <div class="table-responsive rounded">

            <table class="table text-center">

                <thead class="table-dark">

                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Status</th>
                        <th scope="col">Editar</th>
                    </tr>

                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCurso)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.NomeCurso)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurso)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StatusCurso)
                        </td>

                        <td>
                            <a class="text-primary" asp-action="Editar" asp-route-id="@item.IdCurso"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    }

                </tbody>

            </table>

        </div>

    </div>
</section>




