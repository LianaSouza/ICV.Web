<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Coruja Veículos | @ViewData["Title"] </title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" type="imagex/png" href="~/img/Logocoruja.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.2.0/sweetalert2.min.js"  integrity="sha512-BbhEY8ZvF5TicBw3nIPE5QA4tgPjQ8C3fIiY9c4UBSaRBmvFcY/qOD3FIBa30oBRbN6h/+KjzEMHGqI9tnbSIg=="  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   
</head>
<body style="background-color:#f0f0f0;">

    <header>

        <nav class="navbar navbar-light bg-white shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" style="margin-left:25px" width="30%" height="30%" href=""><img src="~/img/navbar-brand (1).png"/> <b>Coruja Veículos</b></a>
                <button class="navbar-toggler" style="margin-right:25px" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Portal do Colaborador</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page"><b>Institucional</b><hr /></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="HomePortal" asp-action="Index" aria-current="page"><i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Doador" asp-action="Index" aria-current="page"><i class="fas fa-users"></i> Doadores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Beneficiado" asp-action="Index" aria-current="page"><i class="fas fa-hands-helping"></i> Beneficiados</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Colaborador" asp-action="Index" aria-current="page"><i class="fas fa-people-carry"></i> Colaboradores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#"><i class="fas fa-chart-bar"></i> Dashboard</a>
                            </li>
                            <li class="nav-item mt-2">
                                <a class="nav-link active" aria-current="page" href="#"><b>Ensino</b><hr /></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Curso" asp-action="Index" aria-current="page"><i class="far fa-list-alt"></i> Cursos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Turma" asp-action="Index" aria-current="page"><i class="fas fa-chalkboard-teacher"></i> Turmas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Aluno" asp-action="Index" aria-current="page"><i class="fas fa-user-graduate"></i> Alunos</a>
                            </li>
                            <li class="nav-item mt-2">
                                <a class="nav-link active" aria-current="page" href="#"><b>Controle de Doações</b><hr /></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Produto" asp-action="Index" aria-current="page"><i class="fas fa-boxes"></i> Gestão de Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#"><i class="fas fa-arrow-right"></i> Entrada de Doações</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="ItemSaida" asp-action="Index" aria-current="page" ><i class="fas fa-arrow-left"></i> Saída de Doações</a>
                            </li>
                            <li class="nav-item mt-3">
                                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout" style="width:100%">Sair <i class="fas fa-sign-out-alt"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3" style="margin-top:100px">
            @RenderBody()
        </main>
    </div>
    <div style="margin-top:100px">
        <div class="footer">
            <footer class="border-top bg-light text-center text-muted mt-3">
                <div class="container p-4">
                    &copy; @DateTime.Now.Year - Instituto Coruja Veículos | Portal do Colaborador
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
