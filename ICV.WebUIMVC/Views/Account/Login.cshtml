@model ICV.WebUIMVC.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coruja Veículos - Login </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.2.0/sweetalert2.css"
          integrity="sha512-LRp+qODOA0wpSaltREOgP39Xpy8tfQwNgdCfzjgvRyzUg2qSsB5N/b4lag3eP5e0CfUIBYdg6iKlSJfNZVUHeQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/combine/npm/sweetalert2@11.2.0/dist/sweetalert2.min.css,npm/sweetalert2@11.2.0/dist/sweetalert2.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.2.0/dist/sweetalert2.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/combine/npm/sweetalert2@11.2.0,npm/sweetalert2@11.2.0/dist/sweetalert2.min.js,npm/sweetalert2@11.2.0/dist/sweetalert2.js,npm/sweetalert2@11.2.0/dist/sweetalert2.all.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.2.0/sweetalert2.min.js"
            integrity="sha512-BbhEY8ZvF5TicBw3nIPE5QA4tgPjQ8C3fIiY9c4UBSaRBmvFcY/qOD3FIBa30oBRbN6h/+KjzEMHGqI9tnbSIg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.2.0/dist/sweetalert2.all.min.js"></script>
</head>

<body style="background-color: lightgray">
    <main class="pb-3" style="padding:30px">
        <div class="container-fluid">
            <div class="row justify-content-center p-5">
                <div class="card mb-2 p-4 shadow" style="margin-top:35px">

                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">

                                <div class="col-sm-6 text-center retira-responsivo" style="padding:10px; margin-top: 15px">
                                    <div>
                                        <h1><b>Instituto Coruja Veículos</b></h1>

                                        <div class="p-lg-5">
                                            <img src="~/img/Logocoruja2.png" class="img-fluid rounded" height="65%" width="65%">
                                        </div>

                                    </div>
                                </div>

                                <div class="col-sm-6" style="margin-top:35px;">
                                    <div class=" p-6">

                                        <div id="titulo" class="text-center" style="margin-top: 15px">

                                            <h3><b>Faça seu Login</b></h3>
                                        </div>
                                        <hr />
                                        <div class="p-2">
                                            <form asp-action="Login" class="align-center">
                                                <div class="form-group">
                                                    <label for="InputEmail" class="form-label fs-4">Email</label>
                                                    <input asp-for="Email" type="email" style="width: 100%" class="form-control d-sm-inline-flex p-2 bd-highlight rounded-pill" id="InputEmail" placeholder="Administrador@senac.sp" required>
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label for="InputPassword" class="form-label fs-4">Senha</label>
                                                    <input asp-for="Senha" type="password" style="width: 100%" class="form-control d-sm-inline-flex p-2 bd-highlight rounded-pill" id="InputPassword" placeholder="**********" required />
                                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                                </div>

                                                <div class="form-group" style="text-align:center; padding-top: 10px">
                                                    <input id="btnLogin" type="submit" value="Acessar" style="width: 100%" class="btn btn-primary rounded-pill" data-myValue="@ViewBag.retorno" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>


<script>
    var retorno = "@ViewBag.retorno";
    console.log(retorno);

    $(document).ready(function () {

            if (retorno == "Erro" ) {
                const Toast = Swal.mixin({

                    toast: true,

                    position: 'top',

                    showConfirmButton: false,

                    timer: 2000,

                    didOpen: (toast) => {

                        toast.addEventListener('mouseenter', Swal.stopTimer)

                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }

                })

                Toast.fire({

                    title: 'E-mail ou Senha Incorretos.',

                    icon: 'warning',

                    iconColor: 'red',

                })
            }

    });
</script>