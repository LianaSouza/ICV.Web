@model ICV.WebUIMVC.Models.DoacaoEntradaModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="uf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>



    <style>
        #rectangle {
            position: relative;
            width: 1px;
            height: 571px;
            background: #04A0D2;
            border-radius: 2px;
        }
    </style>

</head>

<body>
    <div style=" margin-top:140px;">
        <div class="card mb-2 shadow">
            <div class="card-title p-3">
                <h4>Cadastrar Doaçao</h4>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="IdDoacao" class="control-label"></label>
                            <input asp-for="IdDoacao" class="form-control" />
                            <span asp-validation-for="IdDoacao" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4">
                            <label asp-for="FKIdDoador" class="control-label"></label>
                            <input asp-for="FKIdDoador" class="form-control" />
                            <span asp-validation-for="FKIdDoador" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4">
                            <label asp-for="FKIdEntradaDoacao" class="control-label"></label>
                            <input asp-for="FKIdEntradaDoacao" class="form-control" />
                            <span asp-validation-for="FKIdEntradaDoacao" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4">
                            <label asp-for="FKIdColaborador" class="control-label"></label>
                            <input asp-for="FKIdColaborador" class="form-control" />
                            <span asp-validation-for="FKIdColaborador" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Quantidade de Items</label>
                            <input type="number" class="form-control" id="quantidadeitem" placeholder="Indique a quantidade">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Categoria da Doação</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione a Categoria</option>
                                <option value="1">Alimento</option>
                                <option value="2">Roupa</option>
                                <option value="3">Brinquedo</option>
                            </select>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-12 text-right">
                                <div style="margin-top: 45px">
                                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retornar</a>
                                    <a asp-action="Detalhes" class="btn btn-success">Salvar <i class="fas fa-save"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
