@model ICV.WebUIMVC.Models.DoacaoEntradaModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="row justify-content-center">
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Doação Entrada</h2>
                    <hr />
                </section>
                <section class="row justify-content-center mt-3">
                    <form asp-action="Cadastrar">
                        <div class="row justify-content-center">
                            <div class="col-sm-4 mt-2">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label>Selecione o Nome do Doador</label>
                                    <select asp-for="FKIdDoador"
                                            asp-items="@(new SelectList(Model.Doador, nameof(DoadorModel.id), nameof(DoadorModel.Nome)))" class="form-select" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4 mt-2">
                                <label>Selecione a Categoria da Doação</label>
                                <select asp-for="CategoriaDoacao" class="form-select" required>
                                    <option value="1">Alimento</option>
                                    <option value="2">Roupa</option>
                                    <option value="3">Brinquedo</option>
                                </select>
                            </div>
                            <div class="form-group mt-3 text-end">

                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input type="submit" value="Create" class="btn btn-success" />

                            </div>

                        </div>
                    </form>
                </section>

                <section class="row justify-content-center mt-3">
                    <section>
                        <h2>Cadastrar Itens Saida</h2>
                        <hr />
                    </section>
                    <form asp-action="CadastrarItem">
                        <div class="row justify-content-center">
                            <div class="col-sm-4 mt-2">

                                <div class="form-group">
                                    <label>Selecione o Produto</label>
                                    <select asp-for="FKIdProduto"
                                            asp-items="@(new SelectList(Model.Produto, nameof(ProdutoModel.IdProduto), nameof(ProdutoModel.NomeProduto)))" class="form-select" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4 mt-2">
                                <label>Insira a Quantidade desse Produto</label>
                                <input asp-for="QuantidadeItem" class="form-control" required />
                            </div>
                            <div class="col-sm-4 mt-2">
                                <label>Selecione a Categoria do Produto</label>
                                <select asp-for="CategoriaDoacao" class="form-select" required>
                                    <option value="1">Alimento</option>
                                    <option value="2">Roupa</option>
                                    <option value="3">Brinquedo</option>
                                </select>
                            </div>
                            <div class="form-group mt-3 text-end">

                                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                <input type="submit" value="Create" class="btn btn-success" />

                            </div>

                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>