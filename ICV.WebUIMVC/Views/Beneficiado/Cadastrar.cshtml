@model ICV.WebUIMVC.Models.BeneficiadoModel

@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="uf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">

    </script>



    <style>
        #rectangle {
            position: relative;
            width: 1px;
            height: 571px;
            background: #04A0D2;
            border-radius: 2px;
        }
    </style>

</head>

<body>
    <div style=" margin-top:140px;">
        <div class="card mb-2 shadow">
            <div class="card-title p-3">
                <h4>Cadastrar Beneficiarios</h4>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="id" class="control-label"></label>
                            <input asp-for="id" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="FKIdColaborador" class="control-label"></label>
                            <input asp-for="FKIdColaborador" class="form-control" />
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Nome do Beneficiado</label>
                            <input type="text" class="form-control" id="nomebeneficiado" placeholder="Nome do Beneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Cpf Beneficiario</label>
                            <input type="text" class="form-control" id="cpfbeneficiado" placeholder="000.000.000-00">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Email</label>
                            <input type="email" class="form-control" id="emailbeneficiado" placeholder="example@gmail.com">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Telefone</label>
                            <input type="tel" class="form-control" id="telefonebeneficiado" placeholder="(00) 00000-0000">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Data de Nascimento</label>
                            <input type="date" class="form-control" id="datanascimentobeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Digite a quantidade de pessoas na casa</label>
                            <input type="number" class="form-control" id="quantidadefamiliabeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Digite a renda mensal da familia cadastrada</label>
                            <input type="text" class="form-control" id="rendafamiliarbeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Status</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione o status</option>
                                <option value="1">Ativo</option>
                                <option value="2">Inativo</option>
                            </select>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-12 text-right">
                                <div style="margin-top: 45px">
                                    <a href="" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retornar</a>
                                    <a href="" class="btn btn-success">Salvar <i class="fas fa-save"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
