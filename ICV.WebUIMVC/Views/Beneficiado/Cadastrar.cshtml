@model ICV.WebUIMVC.Models.BeneficiadoModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}




<style>
    #rectangle {
        position: relative;
        width: 1px;
        height: 571px;
        background: #04A0D2;
        border-radius: 2px;
    }
</style>


<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Curso</h2>
                    <hr />
                </section>
                <section class="row justify-content-center mt-3">
                    <form asp-action="Cadastrar">
                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="form-label">Nome do Beneficiado</label>
                            <input type="text" class="form-control" id="nomebeneficiado" placeholder="Nome do Beneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Cpf Beneficiario</label>
                            <input type="text" class="form-control" id="cpfbeneficiado" placeholder="000.000.000-00">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Email</label>
                            <input type="email" class="form-control" id="emailbeneficiado" placeholder="example@gmail.com">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Telefone</label>
                            <input type="tel" class="form-control" id="telefonebeneficiado" placeholder="(00) 00000-0000">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Data de Nascimento</label>
                            <input type="date" class="form-control" id="datanascimentobeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Digite a quantidade de pessoas na casa</label>
                            <input type="number" class="form-control" id="quantidadefamiliabeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Digite a renda mensal da familia cadastrada</label>
                            <input type="text" class="form-control" id="rendafamiliarbeneficiado">
                        </div>

                        <div class="col-sm-4">
                            <label for="formGroupExampleInput" class="form-label">Status</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Selecione o status</option>
                                <option value="1">Ativo</option>
                                <option value="0">Inativo</option>
                            </select>
                        </div>

                        <div class="mt-3 text-end">
                            <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                            <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-success" />
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
