@model ICV.WebUIMVC.Models.BeneficiadoModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}


<style>
    #rectangle {
        position: relative;
        width: 1px;
        height: 571px;
        background: #04A0D2;
        border-radius: 2px;
    }
</style>


<section>
    <div class="p-3">
        <div class="card shadow p-4">
            <div class="card-body">
                <section>
                    <h2>Cadastrar Beneficiado</h2>
                    <hr />
                </section>
                <section>
                    <form asp-action="Cadastrar">
                        <div class="row mt-3">
                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Nome do beneficiado</label>
                                <input asp-for="Nome" id="nome" class="form-control" placeholder="Insira o nome do beneficiado..." required />
                            </div>

                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Cpf Beneficiario</label>
                                <input asp-for="CpfBeneficiado" id="cpf" class="form-control" placeholder="000.000.000-00"  required />
                            </div>

                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" type="email" required />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Telefone</label>
                                <input asp-for="Telefone" id="celular" class="form-control" placeholder="(00) 00000-0000"  required />
                            </div>

                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Data de Nascimento</label>
                                <input asp-for="DataNascimentoBeneficiado" id="dataNascimento" class="form-control" placeholder="00/00/0000" type="date" required />
                            </div>

                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Digite a quantidade de dependentes</label>
                                <input asp-for="QuantidadeDependentes" id="QuantidadeDependentes" class="form-control" placeholder="Ex: 3" required />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Digite a renda mensal dos dependetes</label>
                                <input asp-for="RendaMensalBeneficiado" ID="RendaMensalBeneficiado" class="form-control" placeholder="R$ = 0000" required />
                            </div>

                            <div class="col-sm-4">
                                <label for="formGroupExampleInput" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                            <div class="col-sm-4 mt-3">
                                <div class="mt-4 text-end">
                                    <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Retornar</a>
                                    <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    /* Mascaras */


    /*Mascara para o Nome*/

    $("#nome").on("input", function () {
        var regexp = /[^a-zA-Z]/g;
        if (this.value.match(regexp)) {
            $(this).val(this.value.replace(regexp, ''));
        }
    });

    /*Mascara para o CPF*/
    $("cpf, #cpf").mask("000.000.000-00");

    /*Data de nascimento
  $('.dataNascimento').mask('00/00/0000');*/

    /*Mascara para celular*/
    $("#telefone, #celular").mask("(00) 00000-0000");


    /*Mascara RendaMensalBeneficiado*/
    $('.RendaMensalBeneficiado').mask('#.##0,00', { reverse: true });

    /*Masca Quantidade do produto*/
    ('.QuantidadeDependentes').mask('0000');

</script>